{% extends 'base.html.twig' %}

{% block title %}Discover{% endblock %}

{% block body %}


    <center><h2 class="mt-3">Discover Movies</h2></center>

    <div class="container">
        <div class="row">
            {% for film in films %}
                <div class="col-md-4">
                    <div class="jumbotron" style="height: 98%;">
                        <h1 class="display-8">{{ film[0]['title'] }}</h1>
                        <p class="my-7">{{ film[0]['overview']}}</p>
                        <hr class="my-4">
                        <p>Vote: {{ film[0]['vote_count'] }}<br>Average Rate: {{ film[0]['vote_average'] }}/10<br>Genre</p>
                        <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

















