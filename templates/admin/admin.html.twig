{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}

    <div style="margin: 0 auto; width: 350px">
        <div class="container">
            <a href="{{ path('register_user') }}"><button type="button" class="btn btn-secondary btn-lg btn-block" style="margin-top: 20%">{{ 'Create user' | trans }}</button></a><br>
            <a href="{{ path('user_show') }}"><button type="button" class="btn btn-success btn-lg btn-block">{{ 'List users' | trans }}</button><br></a>
            <a href="{{ path('user.remove.all') }}" onclick="return confirm('{{ 'Are you sure you want to delete this user? This action is irreversible.' | trans }}')"><button type="button" class="btn btn-danger btn-lg btn-block">{{ 'Delete all users' | trans }}</button><br></a><br>
            <button type="button" class="btn btn-secondary btn-lg btn-block">{{ 'Create feedbacks' | trans }}</button><br>
            <button type="button" class="btn btn-success btn-lg btn-block">{{ 'List feedbacks' | trans }}</button><br>
            <button type="button" class="btn btn-danger btn-lg btn-block">{{ 'Delete all feedbacks' |trans }}</button><br>
        </div>
    </div>

{% endblock %}

